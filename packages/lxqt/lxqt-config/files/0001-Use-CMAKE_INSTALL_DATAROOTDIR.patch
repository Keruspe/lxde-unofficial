From 3a776c7d60129b21ec50eaf4ca273a32e9028ee4 Mon Sep 17 00:00:00 2001
From: Hong Hao <oahong@gmail.com>
Date: Tue, 14 Nov 2017 09:42:17 +0800
Subject: [PATCH] Use CMAKE_INSTALL_DATAROOTDIR

---
 lxqt-config-brightness/CMakeLists.txt      | 6 +++---
 lxqt-config-monitor/resources/configure.in | 4 ++--
 2 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/lxqt-config-brightness/CMakeLists.txt b/lxqt-config-brightness/CMakeLists.txt
index c21ab45..4851d1b 100644
--- a/lxqt-config-brightness/CMakeLists.txt
+++ b/lxqt-config-brightness/CMakeLists.txt
@@ -71,14 +71,14 @@ target_link_libraries(
 )
 
 add_definitions(
-  -DICON_DIR="${CMAKE_INSTALL_PREFIX}/share/icons/hicolor/48x48/apps"
+    -DICON_DIR="${CMAKE_INSTALL_DATAROOTDIR}/icons/hicolor/48x48/apps"
 )
 
 
 install(TARGETS ${PROJECT_NAME} RUNTIME DESTINATION bin)
-install(FILES ${DESKTOP_FILES} DESTINATION ${CMAKE_INSTALL_PREFIX}/share/applications)
+install(FILES ${DESKTOP_FILES} DESTINATION ${CMAKE_INSTALL_DATAROOTDIR}/applications)
 install(
     FILES icons/brightnesssettings.svg
-    DESTINATION "${CMAKE_INSTALL_PREFIX}/share/icons/hicolor/48x48/apps"
+    DESTINATION "${CMAKE_INSTALL_DATAROOTDIR}/icons/hicolor/48x48/apps"
 )
     
diff --git a/lxqt-config-monitor/resources/configure.in b/lxqt-config-monitor/resources/configure.in
index c0cd07a..bba3d65 100644
--- a/lxqt-config-monitor/resources/configure.in
+++ b/lxqt-config-monitor/resources/configure.in
@@ -1,4 +1,4 @@
 #ifndef __CONFIG_H__
-#define ICON_PATH "${CMAKE_INSTALL_PREFIX}/share/lxqt/icons/"
+#define ICON_PATH "${CMAKE_INSTALL_DATAROOTDIR}/lxqt/icons/"
 #define __CONFIG_H__
-#endif
\ No newline at end of file
+#endif
