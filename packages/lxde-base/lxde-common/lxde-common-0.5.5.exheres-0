require lxde

SUMMARY="A set of default configurations for LXDE"

LICENCES="GPL-2"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    run:
        x11-themes/tango-icon-theme
    suggestion:
        x11-apps/xscreensaver
"

src_prepare() {
    # Use tango icon theme
    edo sed -e 's/nuoveXT2/tango/'  \
        -i desktop.conf
}

