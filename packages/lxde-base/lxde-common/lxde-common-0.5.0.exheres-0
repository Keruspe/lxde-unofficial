require lxde [ component=base ]

SUMMARY="A set of default configurations for LXDE"

LICENCES="GPL-2"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    run:
        x11-themes/tango-icon-theme
"

src_prepare() {
    # Use tango icon theme
    edo sed -e 's/nuoveXT2/tango/'  \
        -i desktop.conf
    #autotools_src_prepare
}

