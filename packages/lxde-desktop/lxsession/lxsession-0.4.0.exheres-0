require lxde

SUMMARY="Default X11 session manager of LXDE"

LICENCES="GPL-2"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="hal [[ description = [ Build with HAL support for reboot/shutdown/suspend ] ]]"

DEPENDENCIES="
    build+run:
        hal? ( sys-apps/dbus )
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( hal )
# changelog is not really a changelog
DEFAULT_SRC_INSTALL_EXCLUDE=( ChangeLog )

